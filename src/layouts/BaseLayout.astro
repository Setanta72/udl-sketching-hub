---
/**
 * Base Layout v2.0
 * The foundational layout for all pages with improved design system
 * NO Learning Mode Toggle - removed in v2.0
 */

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Progressive mastery learning for product design sketching" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | UDL Sketching Hub</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600;700;800&display=swap" rel="stylesheet">
    <!-- Print stylesheet for A4 landscape workbook format -->
    <link rel="stylesheet" href="/src/styles/print.css" media="print">
  </head>
  <body>
    <!-- HEADER: Site navigation and branding -->
    <header class="site-header">
      <div class="container">
        <nav class="main-nav">
          <a href="/" class="logo">
            <span class="logo-icon">✏️</span>
            <span class="logo-text">UDL Sketching Hub</span>
          </a>

          <ul class="nav-links">
            <li><a href="/">Modules</a></li>
            <li><a href="/about">About</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- MAIN CONTENT: Page-specific content goes here -->
    <main class="site-main">
      <div class="container">
        <slot />
      </div>
    </main>

    <!-- FOOTER: Additional resources and credits -->
    <footer class="site-footer">
      <div class="container">
        <p>© 2024 UDL Sketching Hub</p>
        <p class="footer-note">Supporting progressive mastery learning for all abilities</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  /* ===== DESIGN SYSTEM v2.0 ===== */

  /* RESET */
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  /* CSS CUSTOM PROPERTIES - Design System Foundation */
  :root {
    /* === COLOR PALETTE v2.0 === */
    /* Warm, educational, inspiring colors */

    /* Primary: Deep blue-teal - trustworthy, calm, professional */
    --color-primary: #2E5266;
    --color-primary-light: #417B94;
    --color-primary-dark: #1C3540;

    /* Secondary: Warm orange - energetic, creative, action */
    --color-secondary: #F4A259;
    --color-secondary-light: #F7B97E;
    --color-secondary-dark: #E88B3D;

    /* Accent: Fresh teal - modern, growth */
    --color-accent: #6B9080;
    --color-accent-light: #8BAA9C;
    --color-accent-dark: #527566;

    /* Success: Green - achievement, mastery */
    --color-success: #52A675;
    --color-success-light: #6FBB8E;
    --color-success-dark: #3D8559;

    /* Warning: Amber - attention, novice */
    --color-warning: #E76F51;
    --color-warning-light: #ED8B73;
    --color-warning-dark: #D45539;

    /* Background levels */
    --color-bg-primary: #FFFFFF;
    --color-bg-secondary: #F8F9FA;
    --color-bg-tertiary: #E9ECEF;
    --color-bg-accent: #FFF8F0;

    /* Text colors */
    --color-text-primary: #1A1A1A;
    --color-text-secondary: #4A5568;
    --color-text-tertiary: #718096;

    /* Border colors */
    --color-border: #E2E8F0;
    --color-border-dark: #CBD5E0;

    /* === TYPOGRAPHY === */
    --font-heading: 'Poppins', 'Inter', system-ui, sans-serif;
    --font-body: 'Inter', system-ui, sans-serif;
    --font-mono: 'JetBrains Mono', 'Courier New', monospace;

    /* Type scale */
    --text-xs: 0.75rem;      /* 12px */
    --text-sm: 0.875rem;     /* 14px */
    --text-base: 1rem;       /* 16px */
    --text-lg: 1.125rem;     /* 18px */
    --text-xl: 1.25rem;      /* 20px */
    --text-2xl: 1.5rem;      /* 24px */
    --text-3xl: 1.875rem;    /* 30px */
    --text-4xl: 2.25rem;     /* 36px */
    --text-5xl: 3rem;        /* 48px */

    /* Line heights */
    --leading-tight: 1.25;
    --leading-snug: 1.375;
    --leading-normal: 1.5;
    --leading-relaxed: 1.625;
    --leading-loose: 2;

    /* === SPACING SYSTEM === */
    /* Base unit: 0.25rem (4px) */
    --space-1: 0.25rem;      /* 4px */
    --space-2: 0.5rem;       /* 8px */
    --space-3: 0.75rem;      /* 12px */
    --space-4: 1rem;         /* 16px */
    --space-5: 1.25rem;      /* 20px */
    --space-6: 1.5rem;       /* 24px */
    --space-8: 2rem;         /* 32px */
    --space-10: 2.5rem;      /* 40px */
    --space-12: 3rem;        /* 48px */
    --space-16: 4rem;        /* 64px */
    --space-20: 5rem;        /* 80px */
    --space-24: 6rem;        /* 96px */

    /* === SHADOWS === */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);

    /* === BORDERS === */
    --radius-sm: 0.25rem;    /* 4px */
    --radius: 0.5rem;        /* 8px */
    --radius-md: 0.75rem;    /* 12px */
    --radius-lg: 1rem;       /* 16px */
    --radius-xl: 1.5rem;     /* 24px */

    /* === TRANSITIONS === */
    --transition-fast: 150ms ease;
    --transition-base: 200ms ease;
    --transition-slow: 300ms ease;
  }

  /* === BASE STYLES === */
  html {
    font-family: var(--font-body);
    font-size: 16px;
    line-height: var(--leading-normal);
    color: var(--color-text-primary);
    background: var(--color-bg-primary);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* === CONTAINER === */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  @media (max-width: 640px) {
    .container {
      padding: 0 var(--space-4);
    }
  }

  /* === HEADER === */
  .site-header {
    background: var(--color-primary);
    color: white;
    padding: var(--space-5) 0;
    box-shadow: var(--shadow-md);
    position: sticky;
    top: 0;
    z-index: 50;
  }

  .main-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    text-decoration: none;
    color: white;
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: var(--text-xl);
    transition: opacity var(--transition-base);
  }

  .logo:hover {
    opacity: 0.9;
  }

  .logo-icon {
    font-size: var(--text-3xl);
  }

  .nav-links {
    display: flex;
    gap: var(--space-8);
    list-style: none;
  }

  .nav-links a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    font-size: var(--text-base);
    transition: color var(--transition-base);
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-secondary);
    transform: scaleX(0);
    transition: transform var(--transition-base);
  }

  .nav-links a:hover::after {
    transform: scaleX(1);
  }

  /* === MAIN CONTENT === */
  .site-main {
    flex: 1;
    padding: var(--space-12) 0;
  }

  /* === FOOTER === */
  .site-footer {
    background: var(--color-bg-tertiary);
    padding: var(--space-8) 0;
    text-align: center;
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    margin-top: var(--space-16);
    border-top: 1px solid var(--color-border);
  }

  .footer-note {
    margin-top: var(--space-2);
    font-style: italic;
    color: var(--color-text-tertiary);
  }

  /* === TYPOGRAPHY === */
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    font-weight: 700;
    line-height: var(--leading-tight);
    color: var(--color-text-primary);
    margin-bottom: var(--space-4);
  }

  h1 {
    font-size: var(--text-5xl);
    font-weight: 800;
    margin-bottom: var(--space-6);
  }

  h2 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-5);
  }

  h3 {
    font-size: var(--text-2xl);
  }

  h4 {
    font-size: var(--text-xl);
  }

  h5 {
    font-size: var(--text-lg);
  }

  p {
    margin-bottom: var(--space-4);
    line-height: var(--leading-relaxed);
  }

  a {
    color: var(--color-secondary);
    transition: color var(--transition-base);
  }

  a:hover {
    color: var(--color-secondary-dark);
  }

  /* Strong emphasis on links in content */
  main a {
    font-weight: 500;
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  /* === UTILITY CLASSES === */
  .hidden {
    display: none !important;
  }

  .text-center {
    text-align: center;
  }

  .font-mono {
    font-family: var(--font-mono);
  }

  /* Progress level colors */
  .level-novice {
    color: var(--color-warning);
  }

  .level-proficient {
    color: var(--color-accent);
  }

  .level-mastery {
    color: var(--color-success);
  }

  /* Focus styles for accessibility */
  *:focus-visible {
    outline: 2px solid var(--color-secondary);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
  }

  /* Selection color */
  ::selection {
    background: var(--color-secondary-light);
    color: white;
  }
  /* === VISUAL FILTERING (v3.0) === */
  /* Default: Show everything */
  [data-level] {
    transition: opacity 0.3s ease, filter 0.3s ease;
  }

  /* When a level is selected, fade others */
  body[data-current-level="novice"] [data-level="proficient"],
  body[data-current-level="novice"] [data-level="mastery"] {
    opacity: 0.4;
    filter: grayscale(1);
  }

  body[data-current-level="proficient"] [data-level="novice"],
  body[data-current-level="proficient"] [data-level="mastery"] {
    opacity: 0.4;
    filter: grayscale(1);
  }

  body[data-current-level="mastery"] [data-level="novice"],
  body[data-current-level="mastery"] [data-level="proficient"] {
    opacity: 0.4;
    filter: grayscale(1);
  }

  /* Always show 'all' */
  [data-level="all"] {
    opacity: 1 !important;
    filter: none !important;
  }

  /* Highlight selected */
  body[data-current-level="novice"] [data-level="novice"],
  body[data-current-level="proficient"] [data-level="proficient"],
  body[data-current-level="mastery"] [data-level="mastery"] {
    opacity: 1;
    border-color: var(--color-primary);
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
  }
</style>
