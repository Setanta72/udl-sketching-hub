---
/**
 * Drill Card Component
 * Individual practice drill with difficulty indicator and scaffolding suggestions
 * No filtering - all drills shown to all learners
 */

interface Props {
  title: string;
  description: string;
  difficulty: 'beginner' | 'intermediate' | 'advanced';
  scaffoldingSuggestion?: string;
  estimatedTime?: string;
}

const { title, description, difficulty, scaffoldingSuggestion, estimatedTime } = Astro.props;

// Map difficulty to color and icon
const difficultyConfig = {
  beginner: { color: 'success', icon: '‚óè', label: 'Beginner' },
  intermediate: { color: 'accent', icon: '‚óè‚óè', label: 'Intermediate' },
  advanced: { color: 'warning', icon: '‚óè‚óè‚óè', label: 'Advanced' }
};

const config = difficultyConfig[difficulty];
---

<div class="drill-card">
  <div class="drill-header">
    <h5 class="drill-title">{title}</h5>
    <div class="drill-meta">
      <span class={`difficulty-badge difficulty-${config.color}`}>
        <span class="difficulty-dots">{config.icon}</span>
        <span class="difficulty-label">{config.label}</span>
      </span>
      {estimatedTime && (
        <span class="time-estimate">
          <span class="time-icon">‚è±</span>
          {estimatedTime}
        </span>
      )}
    </div>
  </div>

  <p class="drill-description">{description}</p>

  {scaffoldingSuggestion && (
    <div class="scaffolding-tip">
      <div class="tip-icon">üí°</div>
      <div class="tip-content">
        <p class="tip-label">Scaffolding Tip:</p>
        <p class="tip-text">{scaffoldingSuggestion}</p>
      </div>
    </div>
  )}
</div>

<style>
  .drill-card {
    background: white;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-6);
    transition: all var(--transition-base);
  }

  .drill-card:hover {
    border-color: var(--color-secondary);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .drill-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .drill-title {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
    flex: 1;
  }

  .drill-meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    align-items: flex-end;
  }

  .difficulty-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .difficulty-success {
    background: var(--color-success-light);
    color: var(--color-success-dark);
  }

  .difficulty-accent {
    background: var(--color-accent-light);
    color: var(--color-accent-dark);
  }

  .difficulty-warning {
    background: var(--color-warning-light);
    color: var(--color-warning-dark);
  }

  .difficulty-dots {
    font-size: var(--text-sm);
    line-height: 1;
  }

  .time-estimate {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .time-icon {
    font-size: var(--text-base);
  }

  .drill-description {
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
  }

  .scaffolding-tip {
    display: flex;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-bg-accent);
    border-left: 4px solid var(--color-secondary);
    border-radius: var(--radius);
    margin-top: var(--space-4);
  }

  .tip-icon {
    font-size: var(--text-2xl);
    line-height: 1;
    flex-shrink: 0;
  }

  .tip-content {
    flex: 1;
  }

  .tip-label {
    font-weight: 600;
    font-size: var(--text-sm);
    color: var(--color-secondary-dark);
    margin-bottom: var(--space-2);
  }

  .tip-text {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin: 0;
  }
</style>
